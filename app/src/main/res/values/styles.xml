    <style name="select">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/select_content_padding</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="select_pass_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/select_content_text</item>
        <item name="android:layout_marginStart">@dimen/select_content_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="select_pass_step">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/select_content_step</item>
        <item name="android:layout_marginStart">@dimen/select_content_margin</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="main_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">70dp</item>
        <item name="android:foreground">@drawable/title</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="main_select">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">70dp</item>
        <item name="android:foreground">@drawable/select</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@color/snow</item>
    </style>

    <style name="main_re">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">70dp</item>
        <item name="android:foreground">@drawable/re</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@color/snow</item>
    </style>

    <style name="main_exit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:foreground">@drawable/exit</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@color/snow</item>
    </style>
</resources>
